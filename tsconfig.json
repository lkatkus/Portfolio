{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2015", "es2017", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "components/*": ["components/*"],
      "containers/*": ["containers"]
    },
    "typeRoots": ["./src/types"]
  },
  "include": ["./src"],
  "exclude": ["./src/types"]
}
